

  <div class="container contact_details">
    <div class="row">
      <div class="col-sm-8">
         <p>
          <h1 class="header">Contact us</h1>
          <span class="glyphicon glyphicon-phone-alt"> 078-601-6957</span><br><br>
          <span class ="glyphicon glyphicon-earphone"> Toll free: 0800-0000</span><br><br>
          <span class="glyphicon glyphicon-envelope"> info@berlinbike.com</span>
         </p>
      </div>
      <div class="col-sm-4">
        <%=image_tag "ride-experience-explore.png", class:"img-responsive img_quote_index"%>
      </div>
    </div>

  <%#CONTACT US FORM%>
    <%= flash[:notice] %>
    <%= form_tag("/static_pages/thank_you") do %>
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <div class="form-group">
            <%=label_tag(:name)%>
            <%= text_field_tag(:name, nil, class: "form-control", placeholder: "Enter Name", required: "True")%>
          </div>
          <div class="form-group">
            <%=label_tag(:email)%>
            <%= text_field_tag(:email, nil, class: "form-control", placeholder: "Enter Email", required: "true")%>
          </div>
          <div class="form-group">
            <%=label_tag(:message)%>
            <%=text_area_tag(:message, nil, class: "form-control", placeholder: "Enter Message...")%>
          </div>
      </div>
    </div>
    <%= submit_tag "Send", class: "btn btn-default" %>
    <% end %>
  </div>
