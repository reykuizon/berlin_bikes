<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 products">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
    <div class="col-xs-12 col-sm-6 products">
      <h1><%= @product.name %></h1>
      <strong>Description:</strong><br>
      <%= @product.description %> <br>
      <strong>Colour:</strong>
      <%= @product.colour%> <br>
      <strong>Price:</strong>
      <%= @product.price %> <br>
    </div>
  </div>
  
  <hr>
  <%#SCOPE METHOD%>
  <%= @product.comments.rating_desc.first %>
</div>
