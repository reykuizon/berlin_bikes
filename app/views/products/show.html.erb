<div class="container">
  <%#PRODUCT HEADER%>
  <h1 class="product_header">Product Information</h1>
  <p id="notice"><%= notice %></p>

  <%#DISPLAY NEW ADDED NAME%>
  <p>
    <strong>Name: </strong>
    <%= @product.name %>
  </p>

  <%#DISPLAY NEW ADDED DESCRIPTION%>
  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <%#DISPLAY NEW ADDED URL%>
  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <%#LINK TO OTHER PRODUCT CONTROLLER%>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>