 
<% if signed_in? %>
  <h4 class="add-review-text">Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <%= f.label :body, "Comments" %>
    <%= f.text_area :body %>  <br> <br>
    Rating 
    <div class ="rating "> </div> <br>
    <%= f.submit "Submit" %>
  <% end %>
<% end %>